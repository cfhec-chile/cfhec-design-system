{
  "name": "@cfhec/design-system",
  "version": "1.0.0",
  "description": "CFHEC Chile Design System - Shared Tailwind configuration and styles for internal platform services",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": "./index.js",
    "./styles": "./src/styles/globals.css",
    "./tailwind": "./tailwind.config.ts",
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "tailwind.config.ts",
    "src/styles/globals.css",
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsc --project tsconfig.build.json --watch",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cfhec-chile/cfhec-design-system.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "design-system",
    "tailwind",
    "cfhec",
    "ui",
    "css"
  ],
  "author": "CFHEC Chile",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cfhec-chile/cfhec-design-system/issues"
  },
  "homepage": "https://github.com/cfhec-chile/cfhec-design-system#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3"
  }
}