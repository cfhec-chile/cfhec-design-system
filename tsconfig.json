{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "tailwind.config.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}